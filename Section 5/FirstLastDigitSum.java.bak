public class FirstLastDigitSum {
    // write your code here
    public static int sumFirstAndLastDigit(int num){
        if(num>=0){
            int n=num;
            double first;
            int last=num%10;
            int nDigit =0;
            
            while(n>0){
                nDigit++;
                n=n/10;
            }
            if(nDigit==1){
                first=num;
            }
            else
            first=num/Math.pow(10,(nDigit-1));
            return ((int)first+last);
        }
        return -1;
    }
}