public class PerfectNumber {
    // write your code here
    public static boolean isPerfectNumber(int n){
        if(n<1){
            return false;
        }
        else{
            int i=1;
            int sum=0;
            while(i<=n/2){
                if(n%i == 0){
                   sum+=i; 
                }
                i++;
            }
            if(sum==n)
                return true;
            else
                return false;
        }
    }
}